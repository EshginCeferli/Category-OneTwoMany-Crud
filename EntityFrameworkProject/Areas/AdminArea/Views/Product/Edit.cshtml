@model ProductCreateVM 
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit" class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">

                                <div>
                                    <label for="exampleInputUsername1">Title</label>
                                    @*<input type="text" class="form-control" asp-for="Header">*@
                                    <textarea class="form-control rounded-0" asp-for="Title " id="category-name" rows="5"></textarea>
                                    <span class="text-danger my-1" asp-validation-for="Title"></span>
                                </div>

                                <div>
                                    <label for="exampleInputUsername1">Title</label>
                                    @*<input type="text" class="form-control" asp-for="Header">*@
                                    <textarea class="form-control rounded-0" asp-for="Description" id="category-name" rows="5"></textarea>
                                    <span class="text-danger my-1" asp-validation-for="Description"></span>
                                </div>

                                <div>
                                    <label for="exampleInputUsername1">Title</label>
                                    @*<input type="text" class="form-control" asp-for="Header">*@
                                    <textarea class="form-control rounded-0" asp-for="Price" id="category-name" rows="5"></textarea>
                                    <span class="text-danger my-1" asp-validation-for="Price"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for=Photos>Photo</label>
                                    <input class="form-control" asp-for="Photos">
                                    <span asp-validation-for="Photos" class="text-danger my-1"></span>
                                </div>





                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="SliderDetail" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("category-name");
    </script>
}

